let line1 = "Однажды в студеную зимнюю пору"
let line2 = "Я из лесу вышел; был сильный мороз."
let line3 = "Гляжу, поднимается медленно в гору"
let line4 = "Лошадка, везущая хворосту воз."
let line5 = "И вдруг беззаботная, резвая шутка"
let line6 = "В ушах у меня отозвалась моих:"
let line7 = "Ямщик отморозил себе обе руки,"
let line8 = "А русские руки\n\tчего же стоят?"
let line9 = "Рука ж мне сказала: \"Дружок, небывалая,"
let line10 = "Рука-то домашняя, рука вековая!\""

let poem = """
\(line1)
\(line2)
\(line3)
\(line4)

\(line5)
\(line6)
\(line7)
\(line8)

\(line9)
\(line10)
"""

print(poem)
